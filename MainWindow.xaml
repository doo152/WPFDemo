<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="CanvasDemo" Height="250" Width="330">
    <Grid>
        <Canvas Margin="10" Background="Aqua">
            <Label Content="UserID:" Canvas.Left="27" Canvas.Top="40" />
            <TextBox VerticalAlignment="Center" Background="Beige" Width="150" Height="30" BorderBrush="Black" Canvas.Left="102" Canvas.Top="40"></TextBox>
            <Label Content="Password:" Canvas.Left="27" Canvas.Top="102"/>
            <PasswordBox VerticalAlignment="Center" Background="Azure" Width="150" Height="30" BorderBrush="BlueViolet" Canvas.Left="102" Canvas.Top="100" HorizontalAlignment="Center"></PasswordBox>
            <Button Content="Submit" Canvas.Left="75" Width="75" Canvas.Top="162" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="Reset" Canvas.Left="169" Width="75" Canvas.Top="162" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.85,0.42"/>
        </Canvas>
    </Grid>
</Window>
